{% set ip = host_interfaces | selectattr('role', 'equalto', 'mgmt') | map(attribute='cidr') | join | ipaddr('1') | ipaddr('address') %}
{% set netmask = host_interfaces | selectattr('role', 'equalto', 'mgmt') | map(attribute='cidr') | join | ipaddr('netmask') %}
{% set dhcp_range_start = host_interfaces | selectattr('role', 'equalto', 'mgmt') | map(attribute='cidr') | join | ipaddr('128') | ipaddr('address') %}
{% set dhcp_range_end = host_interfaces | selectattr('role', 'equalto', 'mgmt') | map(attribute='cidr') | join | ipaddr('254') | ipaddr('address') %}

<network>
  <name>{{ item.name }}</name>
  <bridge name='{{ item.bridge }}' stp='on' delay='0'/>
  <mac address='52:54:00:2c:fa:63'/>
  <domain name='{{ item.role }}'/>
  <ip address='{{ ip }}' netmask='{{ netmask }}'>
    <dhcp>
      <range start='{{ dhcp_range_start }}' end='{{ dhcp_range_end }}'/>
    </dhcp>
  </ip>
</network>
