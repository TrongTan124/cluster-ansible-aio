{% for node in kolla_nodes %}
Host {{ node.name }}
     Hostname {{ node.interfaces | selectattr('role', 'equalto', 'mgmt') | map(attribute='address') | join }}
     UserKnownHostsFile /dev/null
     StrictHostKeyChecking no
     User {{ kolla_os_default_user }}
{% endfor %}
