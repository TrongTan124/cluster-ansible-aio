public-keys:
  - "{{ lookup('file', '~/.ssh/id_rsa.pub') }}"
network-interfaces: |
{% for intf in item.interfaces %}
  auto {{ intf.name }}
  iface {{ intf.name }} inet {{ intf.mode }}
{% if intf.mode == 'static' %}
  address {{ intf.address }}
  netmask {{ intf.netmask }}
{% endif %}
